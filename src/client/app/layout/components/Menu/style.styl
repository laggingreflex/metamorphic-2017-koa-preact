.menu ol
.menu ul
.menu li
  list-style-type: none

.menu > .parent
  display: flex

.parent
.children
.parent li
  background: white
  white-space: nowrap

.nested > .parent
  padding-top: 2px
  margin-left: 3px

.parent
  position: relative
.children
  position: absolute
  // top: 1.5em
  left: 0
.nested > .parent > .children
  top: -1px
  left: 99%


.menu > .parent
  > li a
    padding-left .5em
    padding-right .5em
  > li:first-of-type a
    padding-left 1em
  > li:last-of-type a
    padding-right 1em

.nested > .parent
  box-shadow: 1px 1px 1px grey

.nested
  z-index: 100

.menu ol
  border-bottom: 2px solid transparent
.nested ol:hover
.nested .isCurrentPath
.nested ol:hover.isCurrentPath
  border-bottom: 2px solid menu-underline-color
.nested > ol
.nested > ol:hover
  border-bottom: none

.menu > .parent
  border-top: 1px solid
  border-bottom: 1px solid

.nested > ol
  border: 1px solid






.expandable > .nested
  display: none

